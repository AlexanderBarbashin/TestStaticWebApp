#!groovy
properties([disableConcurrentBuilds()])

pipeline {
    agent {
        label 'host'
        }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        timestamps()
    }
    stages {
        stage ('Build stage') {
            steps {
                sh 'cd /var/www; sudo rm -rf test_nginx; sudo mkdir test_nginx; cd test_nginx; sudo git clone https://github.com/AlexanderBarbashin/TestStaticWebApp.git; cd TestStaticWebApp; npm install; gulp'
            }
        }
        }
    }
